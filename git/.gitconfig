[include]
	path = ~/.gitconfig.os
[alias] 
    st = status
    ci = commit
    co = checkout
    br = branch
    log-all = log --graph --all --color --date=local --pretty='%x09%h %cn%x09 %s %Cred%d%Creset %Cblue[%ad]%Creset'
    log-graph = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    stsum = log --stat --summary
    # mergeの際にconflictが起きたファイルを編集
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
    # mergeの際にconflictが起きたファイルをadd
    add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"

[core]
    #pager = nkf -w | LESSCHARSET=utf-8 less
    quotepath = false
    autocrlf = input                 # CRLFを自動変換
    pager = delta --syntax-theme="Coldark-Dark"


[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
    #side-by-side = true

[merge]
    conflictStyle = diff3 #zdiff3

[color]
    status      = auto
    diff        = auto
    branch      = auto
    interactive = auto
    grep        = auto
[user]
    name = "Shohei Fujii"
    email = "fujii.shohei@gmail.com"
[http]
	sslVerify = false
[github]
	#user = s-fujii-denso
	user = ompugao
[branch "master"]
    #mergeoptions = --no-ff
[pull]
	rebase = true
[status]
	showuntrackedfiles = no
[diff]
    algorithm = histogram
[ghq]
    root = ~/3rdparty
[credential "https://github.com"]
	#username = s-fujii-denso
	username = ompugao
[init]
	defaultBranch = master
